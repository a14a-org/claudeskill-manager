{
  "name": "@claude-skill-sync/server",
  "version": "0.1.0",
  "description": "API server for Claude Skill Sync",
  "type": "module",
  "main": "./dist/index.js",
  "scripts": {
    "build": "tsc",
    "dev": "tsx watch --env-file=../../.env src/index.ts",
    "start": "node --env-file=.env dist/index.js",
    "start:prod": "node dist/index.js",
    "typecheck": "tsc --noEmit",
    "clean": "rm -rf dist .turbo",
    "db:generate": "drizzle-kit generate",
    "db:migrate": "drizzle-kit migrate",
    "db:push": "drizzle-kit push",
    "db:studio": "drizzle-kit studio"
  },
  "dependencies": {
    "@hono/node-server": "^1.13.8",
    "@noble/hashes": "^1.7.1",
    "drizzle-orm": "^0.45.1",
    "hono": "^4.6.16",
    "postgres": "^3.4.5",
    "resend": "^4.0.1"
  },
  "devDependencies": {
    "@types/node": "^25.0.3",
    "drizzle-kit": "^0.31.8",
    "tsx": "^4.19.2",
    "typescript": "^5.7.2"
  },
  "engines": {
    "node": ">=20.6.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/a14a-org/claudeskill-manager"
  },
  "license": "MIT"
}
